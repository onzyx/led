{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "/control", "dest": "server.js" },
    { "src": "/(.*)", "dest": "public/$1" }
  ],
  "env": {
    "PORT": 3000
  },
  "cleanUrls": true,
  "public": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server.js"
    }
  ],
  "redirects": [ // Konfigurasi aturan redirect
    {
      "source": "/old-page",
      "destination": "/new-page",
      "statusCode": 301 // Redirect permanen
    }
  ]
}
